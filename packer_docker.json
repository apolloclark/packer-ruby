{
  "variables": {
    "ansible_host": "default",
    "ansible_connection": "docker",
    "package": "{{env `PACKAGE`}}",
    "package_version": "{{env `PACKAGE_VERSION`}}",
    "username": "{{env `DOCKER_USERNAME`}}",
    "version": "{{isotime \"20060102.030405\"}}",
    "version_simple": "{{isotime \"20060102\"}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "amazonlinux:1",
      "commit": "true",
      "exec_user": "root",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ],
      "changes": [
        "USER root",
        "VOLUME /root",
        "WORKDIR /root",
        "ENTRYPOINT [\"/bin/bash\", \"-l\", \"-c\"]",
        "CMD [\"bash\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "whoami",
        "yum update -y",
        "yum install -y sudo which nano wget git"
      ]
    },
    {
      "type": "shell-local",
  	  "command": "ansible-galaxy install --force -v --roles-path='./ansible/roles' --role-file='./ansible/requirements.yml'"
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./ansible/playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    },
    {
      "type": "shell",
      "execute_command": "bash -l '{{.Path}}'",
      "scripts": [
        "scripts/gems.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `version_simple`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}"
      }
    ]
  ]
}